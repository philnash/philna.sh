---
import { footerIcons } from "../utils/footer";
import FooterIcon from "./FooterIcon.astro";
import FooterNav from "./FooterNav.astro";
---

<footer class="site-footer">
  <div class="wrapper">
    <div class="row">
      <div class="cell cell-12 cell-med-8">
        <h2>Find Phil on the Internet</h2>
        <ul class="social">
          {footerIcons.map((icon) => <FooterIcon {...icon} />)}
        </ul>
      </div>

      <FooterNav />
    </div>
  </div>
</footer>
